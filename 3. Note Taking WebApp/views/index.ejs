<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Form</title>
</head>

<body>
    <div id="main">
        <h1>Take Notes</h1>
        <div class="container">
            <form action="/create" method="post">
                <input type="text" placeholder="Enter the title" name="title">
                <textarea name="message" id="message" placeholder="Enter the description here......"></textarea>
                <button>Submit</button>
            </form>
        </div>
        <div class="saved">
            <% if(files.length>0){ %>
            <% files.forEach((e)=>{ %>
                <div class="message">
            <%= e %>
                <div class="options">
                    <a href="/filedata/<%= e %>">Read More</a>
                    <a href="/edit/<%= e %>">Edit File Name</a>
                    <a href="/delete/<%= e %>">Delete</a>
                </div>
                </div>
            <% }) %>
            <% } else{ %>
                <h2>No message yet.</h2>
            <% }%>
        </div>
    </div>
    <script src="/javascripts/script.js"></script>
</body>

</html>